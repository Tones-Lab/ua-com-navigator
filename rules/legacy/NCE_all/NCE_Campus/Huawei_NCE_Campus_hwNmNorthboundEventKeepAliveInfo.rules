##################################################################################################################
#       Desciption:     KeepAlive notification trap which will be used as heartbeat:
#       Info:           2019-12-02, Majewsky Mariella: Rearrange of Rules in Include-Rules-files
#       OID:            .1.3.6.1.4.1.2011.2.15.1.7.2
#       Name:           hwNmNorthboundEventKeepAliveInfo
# 		Reference:		Netcool: Huawei_NCE_Campus_hwNmNorthboundEventKeepAliveInfo.rules
##################################################################################################################

my $rulesfile = "Huawei_NCE_Campus_hwNmNorthboundEventKeepAliveInfo.rules";
$Log->Message('DEBUG', "Executing: " . $rulesfile);
$Event->{SubMethod} = $rulesfile;

if ($specific == 2) {            
    my $hwNmNorthboundKeepAlive = $v1;
    $Event->{'Node'}					= $ip;
    if (($ip eq "172.24.217.20") or ($ip eq "172.24.216.20"))
    {
    	$Event->{'NodeAlias'}			= "office-ncecampus";
    }
    else
    {
    	$Event->{'NodeAlias'}			= $Event->{'Node'};
    }
    $Event->{'EventType'}				= "EMS Heartbeat";
    $Event->{'AlarmCategorization1'}	= "Huawei NCE Campus";
    $Event->{'SubNode'}					= "Heartbeat";
    $Event->{'AlarmCategorization2'}	= "Heartbeat";
    $Event->{'Summary'}       			= $Event->{'EMSName'} . " EMS Heartbeat";
    $Event->{'MsgGroup'}                = "OPS-TX-CONNECTIVITY";
    LibUtil_AddSuppression($Event,"Hidden from NOC","Rules", 0,"Huawei NCE Campus hwNmNorthboundEventKeepAliveInfo", $rulesfile);
    $Event->{'Severity'}      			= 2;
    $Event->{'EventCategory'} 			= 10; ## @Type=13 present in Netcool rules ##
    $Event->{AlarmCode} = "Heartbeat";
    $Event->{SubDeviceType} = 313;
}

$Log->Message('DEBUG', $rulesfile . " ...done");