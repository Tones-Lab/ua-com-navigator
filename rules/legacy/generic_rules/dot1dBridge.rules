my (%oid, %iid, %val);

# real traps contain these oids:
 $oid{vtpVlanIndex} = '1.3.6.1.4.1.9.9.46.1.3.1.1.1';
 $oid{ifName} = '1.3.6.1.2.1.31.1.1.1.1';

# vtpVlanEntry:
# INDEX         { managementDomainIndex, vtpVlanIndex }
# each of those are integer

 while ( my ($k, $v) = each(%$vars) ) {
# The first two exact keys should always be there:
  if ($k eq '1.3.6.1.2.1.1.3.0') {
   $val{'sysUpTime'} = $v;
  }
  elsif ($k eq '1.3.6.1.6.3.1.1.4.1.0') {
   $val{'snmpTrapOid'} = $v;
  }
  elsif ($k =~ /^\Q$oid{vtpVlanIndex}\E(\.|$)(.*)/) {
   $iid{vtpVlanIndex} = $2;
   $val{vtpVlanIndex} = $v;
  }
  elsif ($k =~ /^\Q$oid{ifName}\E(\.|$)(.*)/) {
   $iid{ifName} = $2;
   $val{ifName} = $v;
  }
 }


# This should always be set
$Event->{'Node'}       = $node || "$ip";
# These should be set to suitable values per-trap
$Event->{'AlarmType'}  = 14400; # > 30 = seconds to auto-clear
#$Event->{'Summary'}    = "";
#$Event->{'AlarmGroup'} = "";
#$Event->{'SubAlarmGroup'} = "";
$Event->{'Severity'}   = 1; # 0 = minor, 5 = major, 1 = unknown
#$Event->{'AlarmKey'}   = ""; # unique for de-dupe. Include $ip and $summary?


# For each OBJECT, you can use $oid{OBJECT}, $iid{OBJECT}, or $val{OBJECT}

 if (0) { # dummy
 }
 elsif ($specific == 1) { # newRoot
  # OBJECTS: 
#  $Event->{'AlarmType'}  = 14400; # >30 = seconds to auto-clear
  $Event->{'Summary'}    = "newRoot: dot1dBridge vlanId $val{vtpVlanIndex}";
  $Event->{'AlarmGroup'} = "newRoot";
#  $Event->{'SubAlarmGroup'} = "newRoot";
  $Event->{'Severity'}   = 2; # 0 = minor, 5 = major, 1 = unknown
  $Event->{'AlarmKey'}   = "$ip: newRoot $iid{vtpVlanIndex}";
 }
 elsif ($specific == 2) { # topologyChange
  # OBJECTS: 
#  $Event->{'AlarmType'}  = 14400; # >30 = seconds to auto-clear
  $Event->{'Summary'}    = "topologyChange: dot1dBridge vlanId $val{vtpVlanIndex}, i/f $val{ifName} [$iid{ifName}]";
  $Event->{'AlarmGroup'} = "topologyChange";
#  $Event->{'SubAlarmGroup'} = "topologyChange";
  $Event->{'Severity'}   = 2; # 0 = minor, 5 = major, 1 = unknown
  $Event->{'AlarmKey'}   = "$ip: topologyChange $iid{vtpVlanIndex} $iid{ifName}";
 }
 else { # unknown
  $Event->{'AlarmType'}  = 0; # never auto-delete
  $Event->{'Summary'}    = "Unknown Trap Specific: $enterprise.$specific";
  $Event->{'AlarmGroup'} = 'UnknownTrap';
  $Event->{'Severity'}   = 1; # unknown
  $Event->{'AlarmKey'}   = "Unknown Trap from [$ip]: $enterprise.$specific";

  $Event->{'Custom1'}    = $traplog;
 }
